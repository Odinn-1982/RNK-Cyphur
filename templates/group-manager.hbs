{{!-- Group Manager - Simplified --}}
<div class="cyphur-manager-container">
    <div class="cyphur-manager-header">
        <h3><i class="fas fa-users-cog"></i> Group Manager</h3>
    </div>

    <div class="cyphur-manager-content">
        {{!-- Two Column Layout --}}
        <div class="cyphur-two-column">
            {{!-- Existing Groups --}}
            <div class="cyphur-column">
                <div class="cyphur-column-header">
                    <span>Groups</span>
                    <div class="cyphur-selection-actions">
                        <button type="button" class="cyphur-btn-icon" data-action="deleteSelected" disabled title="Delete">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
                
                <div class="cyphur-group-list">
                    {{#each groups}}
                    <div class="cyphur-group-item" data-group-id="{{this.id}}">
                        <input type="checkbox" class="cyphur-group-check">
                        <div class="cyphur-group-info">
                            <div class="cyphur-group-name">{{this.name}}</div>
                            <div class="cyphur-group-meta">
                                {{this.memberCount}} members Â· {{this.messageCount}} msgs
                            </div>
                        </div>
                        <button type="button" class="cyphur-btn-icon" data-action="editGroup" title="Edit">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button type="button" class="cyphur-btn-icon" data-action="openGroup" title="Open">
                            <i class="fas fa-folder-open"></i>
                        </button>
                    </div>
                    {{else}}
                    <div class="cyphur-empty-state">
                        <i class="fas fa-users"></i>
                        <p>No groups</p>
                    </div>
                    {{/each}}
                </div>
            </div>

            {{!-- Create New Group --}}
            <div class="cyphur-column">
                <div class="cyphur-column-header">
                    <span>Create New</span>
                </div>

                <div class="cyphur-form-group">
                    <label>Name</label>
                    <input type="text" name="newGroupName" placeholder="Group name...">
                </div>

                <div class="cyphur-form-group">
                    <label>Members</label>
                    <div class="cyphur-member-list">
                        {{#each users}}
                        <label class="cyphur-member-option">
                            <input type="checkbox" value="{{this.id}}">
                            <span>{{this.name}}</span>
                            {{#if this.isGM}}<span class="cyphur-gm-badge">GM</span>{{/if}}
                            {{#if this.isOnline}}<span class="cyphur-online-dot"></span>{{/if}}
                        </label>
                        {{/each}}
                    </div>
                </div>

                <button type="button" class="cyphur-btn cyphur-btn-primary" data-action="createGroup">
                    <i class="fas fa-plus"></i> Create Group
                </button>
            </div>
        </div>
    </div>
</div>
